{{#section 'head'}}
    <!-- Search Engine -->
    <meta name="description"
        content="Quickly super charge your tweets. You can easily design and publish a tweet that exceeds more than 280 characters.">
    <meta name="image" content="{{baseUrl}}/images/profile.png">
    <!-- Schema.org for Google -->
    <meta itemprop="name" content="One Page Tweets">
    <meta itemprop="description"
        content="Quickly super charge your tweets. You can easily design and publish a tweet that exceeds more than 280 characters.">
    <!-- open graph -->
    <meta property="og:title" content="One Page Tweets - Design and personalize your tweets">
    <meta property="og:type" content="product">
    <meta property="og:description"
        content="Quickly super charge your tweets. You can easily design and publish a tweet that exceeds more than 280 characters.">
    <meta property="og:url" content="{{baseUrl}}">
    <meta property="og:image" content="{{baseUrl}}/images/profile.png">
    <meta property="og:image:alt" content="opt">
    <!-- twitter -->
    <meta name="twitter:title" content="One Page Tweets - Design and personalize your tweets">
    <meta name="twitter:description"
        content="Quickly super charge your tweets. You can easily design and publish a tweet that exceeds more than 280 characters.">
    <meta name="twitter:image" content="{{baseUrl}}/images/profile.png">
    <meta name="twitter:site" content="@onepagetweets">
    <meta name="twitter:creator" content="@onepagetweets">
{{/section}}
{{#section 'scripts'}}
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script type="application/javascript" defer src="/js/pages/home.js"></script>
{{/section}}
<div class="custom--home">
    <!-- display flash messages -->
    {{> flash}}
    <!-- display flash messages -->
    <br />
    <div>
        <div class="container custom--masthead">
            <div class="row">
                <div class="col-6 mx-auto col-md-4 order-md-2">
                    <img src="/images/default.png" width="220" />
                </div>
                <div class="col-md-8 order-md-1 text-center text-md-left pr-md-5">
                    <h1 class="mb-3">Design and personalize your tweets</h1>
                    <p class="lead mb-4">
                        Quickly super charge your tweets. You can easily design and publish a tweet that exceeds
                        more
                        than 280 characters.
                    </p>
                    <p class="lead">Click the button below to get started.</p>
                    <div class="d-flex flex-column flex-md-row">
                        <input type="hidden" id="csrf" name="_csrf" value="{{_csrf}}" />
                        <h1 class="display-5 text-dark"><a id="btnDraftTweet" href="#"
                                class="btn btn-lg btn-primary shadow-sm">
                                <i class="far fa-edit fa-sm text-white-50"></i> Draft a Tweet</a></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="container">
            <div class="row">
                {{#each twitterPost}}
                    <div class="col-md-4">
                        <blockquote class="twitter-tweet">
                            <a href="https://twitter.com/{{user.screen_name}}/status/{{id_str}}">
                                <div class="custom--loading"></div>
                            </a>
                        </blockquote>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>