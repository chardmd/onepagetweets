    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/js/lib/css/all.min.css">
    <!-- Custom styles for this template-->
    <link href="/css/main.css" rel="stylesheet">
    <!-- page specific head -->
    {{{_sections.head}}}
    <!-- Turbo links -->
    <script type="application/javascript" src="/js/lib/turbolinks.js"></script>
    <!-- jQuery -->
    <script type="application/javascript" src="/js/lib/jquery.min.js"></script>
    <!-- Popper -->
    <script type="application/javascript" src="/js/lib/popper.min.js"></script>
