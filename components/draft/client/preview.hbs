{{#section 'head'}}
    <link href="/js/lib/quill.core.css" rel="stylesheet">
{{/section}}
{{#section 'scripts'}}
    <!-- lz-string -->
    <script type="application/javascript" src="/js/lib/lz-string.min.js"></script>
    <!--html2canvas -->
    <script type="application/javascript" src="/js/lib/html2canvas.min.js"></script>
    <script type="application/javascript" defer src="/js/pages/preview.js"></script>
{{/section}}
<div class="custom--preview">
    <ul class="nav nav-pills nav-justified mb-4 form-tabs">
        <li class="nav-item">
            <a href="/draft/editor" class="nav-link rounded-0 pt-2 pb-2">
                <i class="mdi fas fa-info-circle mr-1"></i>
                <span class="font-weight-bold">Editor</span>
            </a>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link rounded-0 pt-2 pb-2 active">
                <i class="mdi fas fa-eye mr-1"></i>
                <span class="font-weight-bold">Preview</span>
            </a>
        </li>
    </ul>
    <br />
    <div>
        <input type="hidden" name="_csrf" value="{{_csrf}}" id="csrf" />
        <div class="row">
            <div class="col-lg-3 m-auto">
                <h1 class="lead font-weight-normal text-center">Select a Background</h1>
                <div class="color-picker">
                    <div data-col="#1abc9c" style="background-color: #1abc9c"></div>
                    <div data-col="#2ecc71" style="background-color: #2ecc71"></div>
                    <div data-col="#3498db" style="background-color: #3498db"></div>
                    <div data-col="#9b59b6" style="background-color: #9b59b6"></div>
                    <div data-col="#34495e" style="background-color: #34495e"></div>
                    <div data-col="#16a085" style="background-color: #16a085"></div>
                    <div data-col="#27ae60" style="background-color: #27ae60"></div>
                    <div data-col="#2980b9" style="background-color: #2980b9"></div>
                    <div data-col="#8e44ad" style="background-color: #8e44ad"></div>
                    <div data-col="#2c3e50" style="background-color: #2c3e50"></div>
                    <div data-col="#f1c40f" style="background-color: #f1c40f"></div>
                    <div data-col="#e67e22" style="background-color: #e67e22"></div>
                    <div data-col="#e74c3c" style="background-color: #e74c3c"></div>
                    <div data-col="#ecf0f1" style="background-color: #ecf0f1"></div>
                    <div data-col="#95a5a6" style="background-color: #95a5a6"></div>
                    <div data-col="#f39c12" style="background-color: #f39c12"></div>
                    <div data-col="#d35400" style="background-color: #d35400"></div>
                    <div data-col="#c0392b" style="background-color: #c0392b"></div>
                    <div data-col="#bdc3c7" style="background-color: #bdc3c7"></div>
                    <div data-col="#7f8c8d" style="background-color: #7f8c8d"></div>
                </div>
            </div>
            <div class="col-lg-9">
                <div id="capture" class="ql-editor">
                    {{{content}}}
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-sm-12 d-flex justify-content-end pr-4">
                <p>
                    <a class="btn btn-secondary btn-lg mr-2" href="/draft/editor" role="button">Back</a>
                    <button class="btn btn-lg btn-primary ml-1" type="button" id="btnConfirm">
                        Publish
                    </button>
                </p>
            </div>
        </div>
    </div>
</div>
<div id="confirmDialog" class="modal fade" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-body p-4">
                <div>
                    <div>
                        <h5 class="mt-2 text-secondary">Publish Tweet</h5>
                        <hr />
                        <p class="mt-3">This tweet will show up in your profile.</p>
                    </div>
                    <div class="text-right">
                        <button id="btnPublish" class="btn btn-lg btn-primary my-2" type="button">
                            <span id="spinner" class="d-none spinner-border spinner-border-sm mr-1" role="status"
                                aria-hidden="true"></span>
                            <span class="text">Publish Tweet</span>
                        </button>
                        &nbsp;
                        <button type="button" class="btn btn-lg btn-secondary my-2" data-dismiss="modal"
                            id="btnClose">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>