{{#section 'scripts'}}
    <script type="application/javascript" defer src="/js/pages/preview.js"></script>
{{/section}}
<div class="page page-preview">
    <ul class="nav nav-pills nav-justified mb-4 form-tabs">
        <li class="nav-item">
            <a href="/draft/editor" class="nav-link rounded-0 pt-2 pb-2">
                <i class="mdi fas fa-info-circle mr-1"></i>
                <span class="d-none d-sm-inline">Editor</span>
            </a>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link rounded-0 pt-2 pb-2 active">
                <i class="mdi fas fa-eye mr-1"></i>
                <span class="d-none d-sm-inline">Preview</span>
            </a>
        </li>
    </ul>
    <br />
    <div>
        <input type="hidden" name="_csrf" value="{{_csrf}}" id="csrf" />
        <div class="row">
            <div class="col-sm">
                <div id="capture" class="container">
                    <div class="wrapper">
                        <p class="about">{{{summary}}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-sm-12 d-flex justify-content-center">
                <p>
                    <button class="btn btn-lg btn-primary ml-1" type="button" id="btnConfirm">
                        Publish This Tweet
                    </button>
                </p>
            </div>
        </div>
    </div>
</div>
<div id="confirmDialog" class="modal fade" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-body p-4">
                <div>
                    <div>
                        <h5 class="mt-2 text-secondary">Publish profile</h5>
                        <hr />
                        <p class="mt-3">This profile will go live when you publish it.</p>
                    </div>
                    <div class="text-right">
                        <button id="btnPublish" class="btn btn-lg btn-success my-2" type="button">
                            <span id="spinner" class="d-none spinner-border spinner-border-sm mr-1" role="status"
                                aria-hidden="true"></span>
                            <span class="text">Publish</span>
                        </button>
                        &nbsp;
                        <button type="button" class="btn btn-lg btn-secondary my-2" data-dismiss="modal"
                            id="btnClose">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>